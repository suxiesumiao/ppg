/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all .5s .5s ease-in-out;
}

.userinfo-hide{
  transform: scale(0);
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.user-motto{
  color: rgb(226, 94, 111);
}